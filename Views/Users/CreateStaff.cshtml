@model SimpleSite.Models.StaffViewModel

@{
    ViewData["Title"] = "Add New Staff";
}

<div class="container mt-5">
    <h1 class="mb-4">Add New Staff</h1>
    <div class="card p-4">
        <form asp-action="CreateStaff" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send Invitation</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


