@model SimpleSite.Models.StudentViewModel

@{
    ViewData["Title"] = "Add New Student";
    var departments = ViewBag.Departments as List<SimpleSite.Models.Department> ?? new List<SimpleSite.Models.Department>();
}

<div class="container mt-5">
    <h1 class="mb-4">Add New Student</h1>
    <div class="card p-4">
        <form asp-action="CreateStudent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DepartmentId" class="control-label">Department</label>
                <select asp-for="DepartmentId" class="form-control">
                    <option value="0">Select a department</option>
                    @foreach (var dept in departments)
                    {
                        <option value="@dept.Id">@dept.Name</option>
                    }
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CGPA" class="control-label"></label>
                <input asp-for="CGPA" class="form-control" placeholder="Enter CGPA (e.g., 8.50)" />
                <span asp-validation-for="CGPA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send Invitation</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}